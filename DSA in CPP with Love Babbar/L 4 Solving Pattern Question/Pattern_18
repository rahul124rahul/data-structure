/* 

for a = 5
 
         *
       * *
     * * *
   * * * *
 * * * * *

 */

#include<iostream>
using namespace std;

int main(){
    int a;
    cin>>a;
    int i=1;
    while(i<=a){
        int j=1;
        while(j<=(a-i)){
            cout<<"  ";
            j++;
        }
        while(j<=a){
            cout<<" *";
            j++;
        }
        cout<<endl;
        i++;
    }
    
    return 0;
}



Output :

12

                       *
                     * *
                   * * *
                 * * * *
               * * * * *
             * * * * * *
           * * * * * * *
         * * * * * * * *
       * * * * * * * * *
     * * * * * * * * * *
   * * * * * * * * * * *
 * * * * * * * * * * * *
 
 
