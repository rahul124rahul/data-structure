
/* 
for a = 4  
  
      1 
    1 2 1 
  1 2 3 2 1 
1 2 3 4 3 2 1 

 */

#include<iostream>
using namespace std;

int main(){
    int a;
    cin>>a;
    int i=1;
    while(i<=a){
        int j=1;
        while(j<=(a-i)){
            cout<<"  ";
            j++;
        }
        j=1;
        while(j<=i){
            cout<<j<<" ";
            j++;
        }
        j=j-2;
        while(j>0){
            cout<<j<<" ";
            j--;
        }
        cout<<endl;
        i++;
    }
    
    return 0;
}



Output :


