/* 
Switch case 
break statement
continue statement 

 */

#include<iostream>
using namespace std;

int main(){
    int a = 1;
    switch(a){
        case 1:cout<<"Case 1 : \n";
            break;              // We cannot use continue in the loops 
                                // This will throw an error

        case 2:cout<<"Case 22 : \n";
            break;
        default:
            cout<<"This is the Default case : \n";
            break;
    }
    
    return 0;
}


Output :

Case 1 : 
