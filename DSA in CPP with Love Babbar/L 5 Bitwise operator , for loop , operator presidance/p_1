/*

& --> AND operator
| --> OR operator
~ --> NOT operator
^ --> XOR  operator

*/



#include<iostream>
using namespace std;

int main(){
    int a = 4;
    int b = 6;

    // use of bitwise &
    cout<<"a & b = "<< ( a & b ) <<endl;     // 4
    cout<<"a | b = "<< ( a | b ) <<endl;     // 6
    cout<<"~ a = "<<( ~ a )  << endl;        // -5
    cout<<"a ^ b = "<< ( a ^ b ) <<endl;     // 2

    return 0;
}
